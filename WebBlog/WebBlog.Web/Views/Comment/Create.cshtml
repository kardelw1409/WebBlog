@model WebBlog.ApplicationCore.Entities.Comment

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>CommentOfPost</h4>
<hr />
@{
    bool hasParent = false;
}
@if (ViewBag.ParentId != null)
{
    hasParent = true;

}
<div class="row">
    <div class="col-md-4">
        @if (hasParent)
        {
            <form asp-action="Create" asp-route-postId="@ViewBag.PostId" asp-route-commentId="@ViewBag.ParentId">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Content" class="control-label"></label>
                    <textarea asp-for="Content" class="form-control" cols="40" rows="5"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="ParentId" type="hidden" value="@ViewBag.ParentId" class="form-control" />
                </div>


                <div class="form-group">
                    <input asp-for="PostId" type="hidden" value="@ViewBag.PostId" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        }
        else
        {
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Content" class="control-label"></label>
                    <textarea asp-for="Content" class="form-control" cols="40" rows="5"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="PostId" type="hidden" value="@ViewBag.PostId" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        }

    </div>
</div>

<div>
    <a asp-action="Index">Back to Post</a>
</div>

