@model WebBlog.ApplicationCore.Entities.Post

@{
    ViewData["Title"] = "Details";
}

<h2>@Html.DisplayFor(model => model.Title)</h2>
<h5>Author: @Html.DisplayFor(model => model.User.UserName) </h5>
<div>
    <hr />

    @if (Model.PostImage != null)
    {
        <img style='width:1000px; height:650px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.PostImage))" />
    }
    <p>
        @Html.DisplayFor(model => model.Content)
    </p>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
    </dl>
</div>


<br>


<div>
    <a asp-controller="Comment" asp-action="Index" asp-route-id="@Model.Id">Show comments</a> |
    <a asp-controller="Comment" asp-action="Create" asp-route-id="@Model.Id">Add comment</a> |
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
