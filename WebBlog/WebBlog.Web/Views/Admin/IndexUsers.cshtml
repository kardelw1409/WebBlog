@model IEnumerable<WebBlog.ApplicationCore.Entities.ApplicationUser>


<h4>
    User Accounts
</h4>


<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3" class="text-center">
                No User Accounts
            </td>
        </tr>

    }
    else
    {
        foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a class="btn btn-success" asp-action="ShowUserDetails" asp-route-id="@user.Id">Details</a>
                    <a class="btn btn-danger" asp-action="DeleteRoles" asp-route-id="@user.Id">Delete All Roles</a>
                </td>
            </tr>

        }
    }
</table>

<a class="btn btn-primary" asp-controller="Home" asp-action="Index">Home</a>