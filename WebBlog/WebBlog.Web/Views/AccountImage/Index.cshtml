@model IList<int?>
@if (User.Identity.IsAuthenticated)
{
    @if (User.IsInRole("Admin"))
    {
        <form asp-controller="AccountImage" asp-action="UploadImage" enctype="multipart/form-data" method="post">
            <input type="file" name="files" />
            <button>post</button>
        </form>
    }
}

@if (Model != null)
{
<form asp-controller="AccountImage" asp-action="ChooseImage" asp-route-returnUrl="@Context.Request.Path">
    @foreach (var item in Model)
    {
        <button type="submit" id="@item" value="@item">
            <img for="@item" src="/AccountImage/ViewImage/@item" />
        </button>
    }

</form>

}