@using Microsoft.AspNetCore.Identity
@using WebBlog.ApplicationCore.Entities

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                @if (UserManager.GetUserAsync(User).Result?.AccountImage != null)
                {
                    <img style='width:50px; height:50px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(UserManager.GetUserAsync(User).Result.AccountImage))" />
                }
                else
                {
                    <img style='width:50px; height:50px;' src="~/images/img_avatar.png" />
                }
            </li>
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="Identity" asp-page="/Account/Register">Register</a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    </ul>
}